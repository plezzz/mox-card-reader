<div class="modal fade" id="createRecharge" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content bg-dark">
            <div class="modal-header">
                <h5 class="modal-title">Презареждане на карта</h5>
            </div>
            <div class="modal-body">
                <form class="text-center" method="post" action="/recharge/creater">
                    <div class="wrapper">
                        <div class="form-group">
                            <label for="date">Дата</label>
                            <input type="text" class="form-control date-picker" required="required" id="date"
                                   name="date" data-date-format="d.m.Y"
                                   autocomplete="off" value="{{obj.date}}"/>
                        </div>
                        <div class="form-group">
                            <label for="months">Месеци</label>
                            <input type="number" class="form-control" required="required" id="months" name="months"
                                   autocomplete="off" min="1" max="12" step="1"
                                   value="{{#if obj.months}}{{obj.months}}{{else}}1{{/if}}"/>
                        </div>
                        <div class="form-group">
                            <input type="hidden" class="form-control" required="required" id="memberID" name="memberID"
                                   autocomplete="off" value="{{member._id}}"/>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Затвори</button>
                        <button type="submit" class="btn btn-warning">Презареди</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
