<div class="login" xmlns="http://www.w3.org/1999/html">
    <!-- Login -->
    <div class="login__block active" id="login-main">
        <div class="login__header">
            <i class="zwicon-user-circle"></i>
            Здрасти! Моля впишете се
        </div>
        <form action="/login" method="post">
            <div class="login__body">
                <div class="form-group">
                    <label for="username"></label>
                    <input type="text" class="form-control text-center"
                           placeholder="Email Address" id="username" name="username"
                           value="{{obj.username}}">
                </div>
                <div class="form-group">
                    <label for="passowrd"></label>
                    <input type="password" class="form-control text-center"
                           placeholder="Password" id="passowrd" name="password"
                           value="{{obj.password}}">
                </div>
            </div>
            <div class="login__inputs">
                <button type="submit" class="login__btn login_button">Вход</button>
            </div>
        </form>
    </div>
</div>
